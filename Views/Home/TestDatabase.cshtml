@{
    ViewData["Title"] = "Database Test";
}

<div class="text-center">
    <h1 class="display-4">Database Connection Test</h1>
    
    @if (ViewBag.Success)
    {
        <div class="alert alert-success">
            <p>@ViewBag.Message</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <p>@ViewBag.Message</p>
            <hr />
            <pre>@ViewBag.Error</pre>
        </div>
    }
    
    <p>Return to <a asp-controller="Home" asp-action="Index">Home</a></p>
</div>
