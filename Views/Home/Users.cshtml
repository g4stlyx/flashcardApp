@{
    ViewData["Title"] = "User List";
}

<div class="container">
    <h1 class="my-4">Flash Card App Users</h1>
    
    <p class="lead">This page demonstrates retrieving data from the MySQL database.</p>
    
    <div id="userList" class="mt-4">
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Fetch users from API
            $.ajax({
                url: '/api/DatabaseTest/users',
                method: 'GET',
                success: function(response) {
                    let html = `
                        <div class="alert alert-success">
                            ${response.message} Found ${response.userCount} users.
                        </div>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Username</th>
                                    <th>Email</th>
                                </tr>
                            </thead>
                            <tbody>`;
                    
                    response.users.forEach(function(user) {
                        html += `
                            <tr>
                                <td>${user.id}</td>
                                <td>${user.username}</td>
                                <td>${user.email}</td>
                            </tr>`;
                    });
                    
                    html += `
                            </tbody>
                        </table>`;
                    
                    $('#userList').html(html);
                },
                error: function(xhr, status, error) {
                    $('#userList').html(`
                        <div class="alert alert-danger">
                            Error connecting to database: ${xhr.responseText}
                        </div>
                    `);
                }
            });
        });
    </script>
}
