@model flashcardApp.Models.Authentication.LoginRequest
@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Giriş Yap</h4>
                </div>
                <div class="card-body">
                    <div id="loginResult" class="alert" style="display:none;"></div>
                    <form id="loginForm" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Kullanıcı Adı</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Şifre</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                            <a asp-controller="AuthView" asp-action="Register" class="btn btn-outline-secondary">Kayıt ol</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#loginForm').submit(function(e) {
                e.preventDefault();
                
                var loginData = {
                    username: $('#username').val(),
                    password: $('#password').val()
                };
                
                $.ajax({
                    url: '/api/auth/login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(loginData),
                    success: function(response) {
                        if (response.success) {
                            // Store only token in localStorage - user data will be extracted from token when needed
                            localStorage.setItem('token', response.token);
                            
                            // Show success message
                            $('#loginResult')
                                .removeClass('alert-danger')
                                .addClass('alert-success')
                                .text('Giriş Başarılı! Yönlendiriliyor...')
                                .show();
                                
                            // Redirect to home page after 1 second
                            setTimeout(function() {
                                window.location.href = '/';
                            }, 1000);
                        } else {
                            $('#loginResult')
                                .removeClass('alert-success')
                                .addClass('alert-danger')
                                .text(response.message)
                                .show();
                        }
                    },
                    error: function(xhr) {
                        var response = xhr.responseJSON;
                        $('#loginResult')
                            .removeClass('alert-success')
                            .addClass('alert-danger')
                            .text(response ? response.message : 'Bir hata oluştu. Lütfen tekrar deneyiniz.')
                            .show();
                    }
                });
            });
        });
    </script>
}
